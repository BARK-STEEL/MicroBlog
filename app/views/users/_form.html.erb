<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label 'Profile Photo' %>
  <%= f.text_field :profile_photo %>
  <%= f.label 'Profile Photo 2' %>
  <%= f.text_field :profile_photo2 %>
  <!-- <%= f.label 'Profile Color' %> -->
  <!-- <%= f.text_field :color %> -->
  <%= f.label :post_font %>
  <%= f.select :post_font, options_for_select(['futura', 'helvetica', 'courier', 'papyrus', 'impact', 'copperplate'], :selected => @user.post_font), {:include_blank => true}, :id => "fontSelect" %>
  <%= f.submit nil, :class => "btn" %>
<% end %>
