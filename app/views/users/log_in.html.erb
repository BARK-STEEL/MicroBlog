
  <div class="row log-in z-depth-2">
    <h3>Please Log In</h3>

    <%= form_tag '/sessions', method: :post do %>

      <%= label_tag :username %>
      <%= text_field_tag :username %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= submit_tag 'Log In', :class => 'btn' %>

    <% end %>

    <%= link_to 'Need to sign up? Please do here!', sign_up_path %>
  </div>
